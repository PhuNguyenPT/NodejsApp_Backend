{
  "name": "nodejs-app",
  "version": "1.0.0",
  "description": "An Express.js template with TypeScript, ESLint and Prettier",
  "type": "module",
  "engines": {
    "node": "22.17.0"
  },
  "scripts": {
    "dev": "npm run tsoa:build && tsx --watch --env-file .env.dev src/app/index.ts",
    "dev:staging": "npm run tsoa:build && tsx --watch --env-file .env.staging src/app/index.ts",
    "dev:prod": "npm run tsoa:build && tsx --watch --env-file .env.prod src/app/index.ts",
    "start": "node --env-file .env.prod dist/app/index.js",
    "build": "npm run tsoa:build && tsc --build tsconfig.build.json && tsc-alias -p tsconfig.build.json && echo 'Build sizes:' && ls -lah dist/",
    "build:verbose": "npm run tsoa:build && tsc --build --verbose tsconfig.build.json && tsc-alias -p tsconfig.build.json && du -sh dist/* | sort -hr",
    "build:stats": "npm run tsoa:build && tsc --build --verbose --extendedDiagnostics tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "build:watch": "npm run tsoa:build && tsc --build --watch tsconfig.build.json",
    "build:dry": "npm run tsoa:build && tsc --build --dry tsconfig.build.json",
    "build:force": "npm run tsoa:build && tsc --build --force tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "build:clean": "npm run clean && npm run build",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "tsoa:spec": "tsoa spec",
    "tsoa:routes": "tsoa routes",
    "tsoa:build": "npm run tsoa:spec && npm run tsoa:routes",
    "coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "migration:generate": "tsx --env-file .env.dev ./node_modules/typeorm/cli.js migration:generate -d src/config/data.source.ts",
    "migration:create": "tsx --env-file .env.dev ./node_modules/typeorm/cli.js migration:create",
    "migration:run": "tsx --env-file .env.dev ./node_modules/typeorm/cli.js migration:run -d src/config/data.source.ts",
    "migration:revert": "tsx --env-file .env.dev ./node_modules/typeorm/cli.js migration:revert -d src/config/data.source.ts",
    "migration:show": "tsx --env-file .env.dev ./node_modules/typeorm/cli.js migration:show -d src/config/data.source.ts",
    "schema:sync": "tsx --env-file .env.dev ./node_modules/typeorm/cli.js schema:sync -d src/config/data.source.ts",
    "schema:drop": "tsx --env-file .env.dev ./node_modules/typeorm/cli.js schema:drop -d src/config/data.source.ts",
    "migration:run:prod": "npm run build && node --env-file .env.prod ./node_modules/typeorm/cli.js migration:run -d dist/config/data.source.js",
    "migration:revert:prod": "npm run build && node --env-file .env.prod ./node_modules/typeorm/cli.js migration:revert -d dist/config/data.source.js",
    "migration:show:prod": "node --env-file .env.prod ./node_modules/typeorm/cli.js migration:show -d dist/config/data.source.js",
    "schema:sync:prod": "npm run build && node --env-file .env.prod ./node_modules/typeorm/cli.js schema:sync -d dist/config/data.source.js",
    "schema:drop:prod": "npm run build && node --env-file .env.prod ./node_modules/typeorm/cli.js schema:drop -d dist/config/data.source.js",
    "migration:run:staging": "npm run build && tsx --env-file .env.staging ./node_modules/typeorm/cli.js migration:run -d src/config/data.source.ts",
    "migration:revert:staging": "npm run build && tsx --env-file .env.staging ./node_modules/typeorm/cli.js migration:revert -d src/config/data.source.ts",
    "migration:show:staging": "tsx --env-file .env.staging ./node_modules/typeorm/cli.js migration:show -d src/config/data.source.ts"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint",
      "prettier --check"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --check"
    ]
  },
  "_moduleAliases": {
    "@/app": "dist/app",
    "@/config": "dist/config",
    "@/controller": "dist/controller",
    "@/decorator": "dist/decorator",
    "@/dto": "dist/dto",
    "@/entity": "dist/entity",
    "@/event": "dist/event",
    "@/generated": "dist/generated",
    "@/handler": "dist/handler",
    "@/job": "dist/job",
    "@/mapper": "dist/mapper",
    "@/middleware": "dist/middleware",
    "@/repository": "dist/repository",
    "@/service": "dist/service",
    "@/token": "dist/token",
    "@/type": "dist/type",
    "@/util": "dist/util"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PhuNguyenPT/NodejsApp.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PhuNguyenPT/NodejsApp/issues"
  },
  "homepage": "https://github.com/PhuNguyenPT/NodejsApp#readme",
  "dependencies": {
    "@mistralai/mistralai": "^1.7.5",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "envalid": "^8.1.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "inversify": "^7.6.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "redis": "^4.7.1",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0",
    "typeorm": "^0.3.25",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@tsconfig/node22": "^22.0.2",
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/joi": "^17.2.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.10",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.15.4",
    "@types/redis": "^4.0.10",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.30.1",
    "eslint-plugin-perfectionist": "^4.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typeorm-ts-node-commonjs": "^0.3.20",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
