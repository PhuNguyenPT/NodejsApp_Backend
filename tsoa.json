{
  "entryFile": "src/app/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/controller/**/*.ts"],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/app/*": ["app/*"],
      "@/config/*": ["config/*"],
      "@/controller/*": ["controller/*"],
      "@/decorator/*": ["decorator/*"],
      "@/dto/*": ["dto/*"],
      "@/entity/*": ["entity/*"],
      "@/event/*": ["event/*"],
      "@/generated/*": ["generated/*"],
      "@/handler/*": ["handler/*"],
      "@/mapper/*": ["mapper/*"],
      "@/middleware/*": ["middleware/*"],
      "@/repository/*": ["repository/*"],
      "@/service/*": ["service/*"],
      "@/type/*": ["type/*"],
      "@/util/*": ["util/*"]
    }
  },
  "spec": {
    "outputDirectory": "src/generated",
    "specVersion": 3,
    "schemes": ["http", "https"],
    "securityDefinitions": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "in": "header"
      }
    },
    "security": [
      {
        "bearerAuth": []
      }
    ]
  },
  "routes": {
    "routesDir": "src/generated",
    "middleware": "express",
    "authenticationModule": "src/config/authentication.ts",
    "iocModule": "src/app/ioc.container.ts",
    "esm": true
  }
}
